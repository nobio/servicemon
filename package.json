    "dotenv": "^16.6.1",
    "express": "^5.2.1",
    "figlet": "^1.9.4",
    "lokijs": "^1.5.12",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "mongoose": "^8.21.0",
    "morgan": "^1.10.1",
    "node-schedule": "^2.1.1",
    "queue-typescript": "^1.0.1",
    "rolling-file": "^1.1.0",
    "sqlite3": "^5.1.7",
    "tslog": "^4.10.2",
    "uuid": "^11.1.0",
    "yaml": "^2.8.2"
