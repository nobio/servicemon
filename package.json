{
  "name": "servicemon",
  "version": "2.0.1",
  "description": "Monitoring of any endpoints, mainly my own site and api",
  "main": "index.ts",
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./tmp && rimraf ./*.db*",
    "start": "npx tsx ./src/index.ts",
    "start:docker": "node dist/index.js",
    "start:dev": "nodemon npx tsx ./src/index.ts",
    "build": "npm run clean && eslint ./src/ && tsc && cp -r ./src/config ./dist && cp -r ./keys ./dist",
    "build:docker": "tsc && cp -r ./src/config ./dist && cp -r ./keys ./dist",
    "lint": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nobio/timetracker-mon.git"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/figlet": "^1.7.0",
    "@types/lokijs": "^1.5.14",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.4",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^9.0.8",
    "@types/yaml": "^1.9.6",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^8.57.1",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
